@import "normalize.styl"
@import "style.styl"

@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot')
  src url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
      url('../fonts/icomoon.woff') format('woff'),
	  url('../fonts/icomoon.ttf') format('truetype'),
	   url('../fonts/icomoon.svg#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

gris_claro = #eee
gris_oscuro = darkcyan
azul_oscuro = #333333
dorado = #fc0
  
body
  font-family 'Raleway', sans-serif
  font-size 16px

footer
  background #202020
  color rgba(255,255,255,0.7)
  padding 1em
  display relative
  margin-top 2em
  .footer-contactList
    display inline-block
    margin-right 2em
    list-style none
    .footer-contactInfo
      margin-bottom .3em
      text-align left
      a
        text-decoration none
        color #20B2AA
  .footer-container
      text-align center
      position relative
  .footer-column
      display inline-block
      margin 0 4em
      &.description
        color white
      .footer-infoAuthor
          margin 0
          font-size 0.8em        
  .logo-footer
    display inline-block
    margin 0
    position absolute
    left 0
    right 0
    top -40px

nav
  background azul_oscuro
  border-bottom 2px solid dorado
  height 3.5em
  position fixed
  width 100%
  z-index 2
  .logo
    margin 0 2em
    display inline-block
    
  .mainMenu
    display inline-block
    left 10em
    margin 0
    position absolute
    top 1em
    li
      padding-right 4em
      display inline-block
      a
        border-right 1px solid white
        color white
        font-size .8em        
        padding-right 3em
        text-decoration none
        text-transform uppercase
              
  .search-left
    position absolute
    top .8em      
    right 12.5em
    display inline-block
    .search-input
      .input_search
            border-radius 5px
            border 1px solid lightblue
            font-family 'Raleway', sans-serif
            padding 0 1em 0 2em
            width 180px
            height 2.2em
            font-size .8em
      .icon-busqueda
        right 12.5em
        top .6em
        position absolute
        &:before
          content "\e601"
  .container_login
    position absolute
    top 1.1em
    right .6em
    display inline-block
    font-size .8em
    .ingresarUsuario
      padding-right .5em
      border-right 1px solid white
      color gris_oscuro
    .hacerIngresoUsuario
      padding-left .5em
      color dorado
  .avatar
    opacity .4
    position absolute
    right 10em
    top .6em   
      
h2
  font-size 1.3em
  font-weight bold
  margin-top 1em
  padding-left 1em
  
h2, h1, h3
  text-align left
h3
  font-size 1em
  padding-left 1em
  font-weight bold
    
#contenido
  .titulo_Producto
    margin-top 5em  
  .detallesGenerales
    display inline-block
    position relative
    width 50em
    .selector_images
      display inline-block
      margin 0 3em 0 1em
      vertical-align top
    .img_principal
      display inline-block
      margin 0
      padding 0
      img
        width 250px
        display inline-block
    .info_Producto
      display inline-block
      list-style none
      margin 0 0 0 5em
      padding 0
      position absolute
      top 4em
      width 300px
      li
        margin-bottom .5em
        border-bottom 1px dotted #ccc
        .detalle_Producto
          float right
          font-weight bold
    .precio_Producto
      font-size 1.2em
      margin 1em 0 3em 2em
      padding .5em .2em
      text-align right
      display block
      background #B1C6D9
  .especificaciones
    border-left 1px solid #DCDCDC
    display inline-block
    margin-top 2em
    padding-left 1em
    position absolute
    right .5em
    vertical-align top
    width  32em
    font-size .9em
    ul
      margin .5em 0 2em 0
      li
        margin-bottom .3em
    .item-color
      height 2.5em
      width 2.5em
      margin-left 1em
      &.item-color-red
        background red
      &.item-color-orange
        background DarkOrange
      