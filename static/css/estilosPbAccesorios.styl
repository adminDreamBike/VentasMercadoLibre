@import "normalize.styl"
@import "style.styl"

@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot')
  src url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
      url('../fonts/icomoon.woff') format('woff'),
	  url('../fonts/icomoon.ttf') format('truetype'),
	   url('../fonts/icomoon.svg#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

gris_claro = #eee
gris_oscuro = darkcyan
azul_oscuro = #333333
dorado = #fc0
  
body
  font-family 'Raleway', sans-serif
  font-size 16px

footer
  background #202020
  color rgba(255,255,255,0.7)
  padding 1em
  display relative
  margin-top 2em
  .footer-contactList
    display inline-block
    margin-right 2em
    list-style none
    .footer-contactInfo
      margin-bottom .3em
      text-align left
      a
        text-decoration none
        color #20B2AA
  .footer-container
      text-align center
      position relative
  .footer-column
      display inline-block
      margin 0 4em
      &.description
        color white
        text-align justify
        width 222px
      .footer-infoAuthor
          margin 0
          font-size 0.8em        
  .logo-footer
    display inline-block
    margin 0
    position absolute
    left 0
    right 0
    top -40px

nav
  background azul_oscuro
  border-bottom 2px solid dorado
  height 3.5em
  position fixed
  width 100%
  z-index 2
  .logo
    margin 0 2em
    display inline-block
    
  .mainMenu
    display inline-block
    left 10em
    margin 0
    position absolute
    top 1em
    li
      padding-right 4em
      display inline-block
      a
        border-right 1px solid white
        color white
        font-size .8em        
        padding-right 3em
        text-decoration none
        text-transform uppercase
              
  .search-left
    position absolute
    top .8em      
    right 12.5em
    display inline-block
    .search-input
      .input_search
            border-radius 5px
            border 1px solid lightblue
            font-family 'Raleway', sans-serif
            padding 0 1em 0 2em
            width 180px
            height 2.2em
            font-size .8em
      .icon-busqueda
        right 12.5em
        top .6em
        position absolute
        &:before
          content "\e601"
  .container_login
    position absolute
    top 1.1em
    right .6em
    display inline-block
    font-size .8em
    .ingresarUsuario
      padding-right .5em
      border-right 1px solid white
      color gris_oscuro
    .hacerIngresoUsuario
      padding-left .5em
      color dorado
  .avatar
    opacity .4
    position absolute
    right 10em
    top .6em   
      
h2
  font-size 1.3em
  font-weight bold
  margin-top 1em
  padding-left 1em
  
h2, h1, h3
  text-align left
h3
  font-size 1em
  padding-left 1em
  font-weight bold
    
#contenido
  .titulo_Producto
    margin-top 5em  
  .detallesGenerales
    display inline-block
    position relative
    width 50em
    .selector_images
      display inline-block
      margin 0 3em 0 1em
      vertical-align top
    .img_principal
      display inline-block
      margin 0
      padding 0
      img
        width 250px
        display inline-block
    .info_Producto
      display inline-block
      list-style none
      margin 0 0 0 8em
      padding 0
      position absolute
      top 4em
      width 300px
      li
        margin-bottom .5em
        border-bottom 1px dotted #ccc
        .detalle_Producto
          float right
          font-weight bold
    .precio_Producto
      font-size 1.2em
      margin 1em 0 3em 2em
      padding .5em .2em
      text-align right
      display block
      background #B1C6D9
  .especificaciones
    border-left 1px solid #DCDCDC
    display inline-block
    margin-top 2em
    padding-left 1em
    position absolute
    right .5em
    vertical-align top
    width  32em
    font-size .9em
    ul
      margin .5em 0 2em 0
      li
        margin-bottom .3em
    .item-color
      height 2.5em
      width 2.5em
      margin-left 1em
      &.item-color-red
        background red
      &.item-color-orange
        background DarkOrange
  .is-active
    display block
  .icon-hideMenu
    &:before
      content "\e602"
  .icon-shonMenu
    &:before
      content "\e603"
@media screen and (max-width: 480px)
  nav
    position relative
    .avatar
      display none
    .logo
      margin 0
    .mainMenu
      position fixed
      top 4em
      transition .3s
      background #009688
      left -205px
      border-radius 2%
      &.is-active
        left 0
      li
        padding 0
        display block
        margin-bottom 1em
        margin-right 1em
        margin-top .5em
        font-weight bold
        a
          border none
          padding-right 0
    .container_login
      background lightblue
      float right
      padding 1em 2em      
      right 0
      text-align center
      transition .3s
      width 100%
      top -6em
      &.is-active
        top 4.5em   
      a
        margin-bottom 1em
        text-decoration none      
      .ingresarUsuario
        border 0
        color white
        display block
        padding-right 0
      .hacerIngresoUsuario
        padding 0
        color white
    .icon-bars
      color white
      outline 0
      position absolute
      right 1em
      top 1.2em
      &:before
        content "\e600"
      &.is-active
        top 4em
      &.no-active
        display none
      &.si-active
        display block
    .search-left
      left 55%
      .search-input
        position absolute
        right -100px
        .input_search
          width 12em
        .icon-busqueda
          right 10.5em  
  #contenido
    .image_producto
      margin-left 0
      margin-right 0
    .contenido        
      &-button
        background white
        border none
        border-radius 40px
        height 40px
        line-height 40px
        outline 0
        position fixed
        right 1em
        top 4em
        width 40px
        z-index 3
        display none
        background #FF8C00
        outline 0
        &.is-active
          display block
    .detallesGenerales
      width 100%
      .img_principal
        display block
        text-align center
      .info_Producto
        display block
        margin 0
        position relative
        top 0
        width 85%
        margin-left 15%
      .precio_Producto
        margin 0
        margin-left 1em
        width 90%
      .selector_images
        margin 0 3em 1em 1em
        .item_selector
          display inline-block
    .especificaciones
      display block
      position relative
      width 90%
    .titulo_Producto
      margin-top 1em
      h2
        text-align center
  footer
    .footer-container
      .footer-column
        margin 0
        &.contacts
          margin-top 6em
