@import "normalize.styl"
@import "style.styl"

@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot')
  src url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
 url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.svg#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale


gris_claro = #eee
azul_oscuro = #333333
		
body
	background gris_claro
	font-size 16px
	font-family 'Lato', sans-serif
footer
	background #202020
	color rgba(255,255,255,0.7)
	padding 1em
	.footer-contactList
		display inline-block
		margin-right 2em
		.footer-contactInfo
			margin-bottom .3em
			a
				text-decoration none
				color #20B2AA
	.footer-container
		text-align center
	.footer-column
		display inline-block
nav
	background azul_oscuro

ul
	list-style none	
	
.registro
	
	#registrarUsuario
		display block
		position relative
		width 90%
		background white
		margin 0 auto  auto
		
		.datosPersonales
			border none
			display inline-block
			position relative
			width 32em
			left 4em
			.container				
				.input
					border none
					height 2em
					margin .5em 0 1em 0
					outline 5px solid gris_claro
					padding-left 0.2em
					width 390px
			legend
				font-size 1.5em
				width 80%
				border-bottom 1px solid gray
				padding-bottom 10px
				margin-bottom 1.5em
		.datosUsuario
			border none
			display inline-block
			height 532px
			position absolute
			right 10em
			top 0
			.container
				.input
					border none
					height 2em
					margin .5em 0 1em 0
					outline 3px solid gris_claro
					padding-left 0.2em
					width 390px
			legend
				font-size 1.5em
				border-bottom 1px solid gray
				margin-bottom 1.5em
				padding-bottom 10px
				width 100%
			.inputRegistrar
				background cadetblue
				border none
				border-radius 50px
				bottom 4em
				color white
				font-weight bold
				height 2.5em	
				position absolute
				right 2em
				width 150px
			.icon-registrar
				position absolute
				bottom 4em
				right 9em
				opacity .4
				z-index 3
				&:before
					content "\e607"
			.miembro
				position absolute
				bottom 1em
				right 1em
				
			