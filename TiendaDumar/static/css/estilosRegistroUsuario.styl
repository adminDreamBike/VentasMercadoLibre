@import "normalize.styl"
@import "style.styl"

@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot')
  src url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
      url('../fonts/icomoon.woff') format('woff'),
	  url('../fonts/icomoon.ttf') format('truetype'),
	   url('../fonts/icomoon.svg#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale


gris_claro = #eee
gris_oscuro = darkcyan
azul_oscuro = #333333
dorado = #fc0
		
body
	background gris_claro
	font-size 16px
	font-family 'Raleway', sans-serif
	
footer
  background #202020
  color rgba(255,255,255,0.7)
  padding 1em
  display relative
  .footer-contactList
    display inline-block
    margin-right 2em
    .footer-contactInfo
      margin-bottom .3em
      text-align left
      a
        text-decoration none
        color #20B2AA
  .footer-container
      text-align center
      position relative
  .footer-column
      display inline-block
      margin 0 4em
      &.description
        color white
      .footer-infoAuthor
          margin 0
          font-size 0.8em        
  .logo-footer
    display inline-block
    margin 0
    position absolute
    left 0
    right 0
    top -40px
nav
	background azul_oscuro
	border-bottom 2px solid dorado
	height 3.5em
	position fixed
	top 0
	width 100%
	z-index 2
	.logo
		display inline-block
		margin 0 2em
		
	.mainMenu
		display inline-block
		left 10em
		margin 0
		position absolute
		top 1em
		li
			padding-right 4em
			display inline-block
			a
				border-right 1px solid white
				color white
				font-size .8em
				padding-right 3em
				text-decoration none
				text-transform uppercase		
			
							
	.search-left
		display inline-block
		position absolute
		right 12.5em
		top .8em			
		.search-input
			.input_search
				    border 1px solid lightblue
				    border-radius 5px
				    font-family 'Raleway', sans-serif
				    height 2.2em
				    padding 0 1em 0 2em
				    width 180px
			.icon-busqueda
				right 12.5em
				top .6em
				position absolute
				&:before
				  content "\e601"
	.container_login
		display inline-block
		font-size .8em
		position absolute
		right .6em
		top 1.1em
		.ingresarUsuario
			border-right 1px solid white
			color gris_oscuro
			padding-right .5em
		.hacerIngresoUsuario
			color dorado
			padding-left .5em
	.avatar
		opacity .4
		position absolute
		right 10em
		top .6em		

ul
	list-style none	
	
.registro
	margin-top 3.5em
	.info_registroUsuario
		height 2em
		background #5f9ea0
		padding 1em 0
		h2
			margin 0
			color white 
			font-weight bold
	#registrarUsuario
		background white
		display block
		margin 0 auto auto
		position relative
		width 90%
		
		.datosPersonales
			border none
			display inline-block
			left 4em
			position relative
			width 32em
			.container				
				.input
					border none
					height 2em
					margin .5em 0 1em 0
					outline 5px solid gris_claro
					padding-left 0.2em
					width 390px
			legend
				font-size 1.5em
				width 80%
				border-bottom 1px solid gray
				padding-bottom 10px
				margin-bottom 1.5em
		.datosUsuario
			border none
			display inline-block
			height 532px
			position absolute
			right 10em
			top 0
			.container
				.input
					border none
					height 2em
					margin .5em 0 1em 0
					outline 3px solid gris_claro
					padding-left 0.2em
					width 390px
			legend
				font-size 1.5em
				border-bottom 1px solid gray
				margin-bottom 1.5em
				padding-bottom 10px
				width 100%
			.inputRegistrar
				background cadetblue
				border none
				border-radius 50px
				bottom 4em
				color white
				font-weight bold
				height 2.5em	
				position absolute
				right 2em
				width 150px
			.icon-registrar
				position absolute
				bottom 4em
				right 9em
				opacity .4
				z-index 1
				&:before
					content "\e607"
			.miembro
				position absolute
				bottom 1em
				right 1em
				
			