@import "style.styl"
@import "normalize.styl"

gris_claro = #eee
gris_oscuro = darkcyan
azul_oscuro = #333333
dorado = #fc0


@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot')
  src url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
 url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.svg#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
	background gris_claro
	font-size 16px
	font-family 'Lato', sans-serif
	
nav
	background azul_oscuro
	position fixed
	width 100%
	height 3.5em
	border-bottom 2px solid dorado
	.logo
		margin 0 2em
		display inline-block
		
	.mainMenu
		top 1em
		margin 0
		display inline-block
		position absolute
		left 10em
		li
			padding-right 4em
			display inline-block
			a
				padding-right 3em
				text-decoration none
				border-right 1px solid white
				color white
							
	.search-left
		position absolute
		top .8em			
		right 12.5em
		display inline-block
		.search-input
			.input_search
				    border-radius 5px
				    border 1px solid lightblue
				    font-family 'Lato', sans-serif
				    padding 0 1em 0 2em
				    width 180px
				    height 2.2em
			.icon-busqueda
				right 12.5em
				top .6em
				position absolute
				&:before
				  content "\e601"
	.container_login
		position absolute
		top 1.1em
		right .6em
		display inline-block
		font-size .9em
		.ingresarUsuario
			padding-right .5em
			border-right 1px solid white
			color gris_oscuro
		.hacerIngresoUsuario
			padding-left .5em
			color dorado
	.avatar
		position absolute
		right 10em
		top .6em
		opacity .4	
	
ul
	list-style none
	
  		
  		  	
  		
  	
	